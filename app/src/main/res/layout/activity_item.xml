<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.strathmore.ads.fruitMartApp.activities.ItemActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorAccent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:padding="5dp"
        android:weightSum="5">

    <ImageView
            android:id="@+id/imgLogoAddItem"
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="50dp"
            android:layout_weight="2"
    />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="24sp"
            android:gravity="center"
            android:text="Add New Item"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight=".5"
            android:fontFamily="@font/dancing_script_medium"/>


    <EditText
            android:id="@+id/new_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorAccent"
            android:hint="Product Name"
            android:gravity="center_vertical"
            android:layout_weight=".65"
            android:fontFamily="@font/raleway_light"/>

    <EditText
            android:id="@+id/new_item_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:hint="Price per Unit"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorAccent"
            android:gravity="center_vertical"
            android:layout_weight=".65"
            android:fontFamily="@font/raleway_light"/>
    <EditText
            android:id="@+id/new_item_unit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:hint="Product Unit eg kg, bunch"
            android:font="@font/raleway_light"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorAccent"
            android:gravity="center_vertical"
            android:layout_weight=".65"
            android:fontFamily="@font/raleway_light"/>

    <ImageView
            android:id="@+id/save_new_item"
            android:src="@drawable/ic_save"
            android:tooltipText="Save"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"/>

</LinearLayout>

